---
const { href = "#" } = Astro.props;
---

<a href={href} class="btn">
  <slot />
</a>

<style>
  .btn {
    display: inline-block;
    padding: 12px 26px;
    background: #e2e1e1;
    color: #141414;
    border-radius: 30px;
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    transition: 0.25s ease;
  }

  .btn:hover {
    background: #faf8f8;
  }
</style>
